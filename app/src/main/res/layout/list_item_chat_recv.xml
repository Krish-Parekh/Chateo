<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="30dp"
    android:clipToPadding="false"
    android:paddingStart="@dimen/medium_padding"
    android:paddingTop="@dimen/extra_small_padding"
    android:paddingEnd="@dimen/medium_padding"
    android:paddingBottom="@dimen/extra_small_padding">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/receivedCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/chat_rev_background"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ChatShapeAppearanceRec">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexBoxLayoutReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            app:alignItems="flex_end"
            app:flexWrap="wrap"
            app:justifyContent="flex_end">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_medium"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                tools:text="Hello world how are you what you wanna do this app will work great" />

            <TextView
                android:id="@+id/messageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:fontFamily="@font/mulish_regular"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                tools:text="12:00 AM" />
        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>